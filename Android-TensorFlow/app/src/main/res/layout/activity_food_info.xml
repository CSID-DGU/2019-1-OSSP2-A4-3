<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/foodinfo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D84C4C"
        app:title="Food Information"
        app:titleTextColor="#fff"></android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/infoFoodImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />
        <LinearLayout
            android:id="@+id/infoFood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/infoFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="FoodName"
                android:textColor="#D84C4C"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/infoFoodCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textSize="20sp" />

            <Button
                android:layout_margin="3dp"
                android:textColor="#ffff"
                android:background="#D84C4C"
                android:id="@+id/infoFoodSave"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Image Save" />

            <Button
                android:textColor="#ffff"
                android:background="#D84C4C"
                android:id="@+id/infoFoodSearch"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Search Map" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Description"
            android:textColor="#D84C4C"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/infoFoodDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description food" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. How to make"
            android:textColor="#D84C4C"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/infoFoodMake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Youtube에서 참고하시고 만들어보세요 !!!" />

        <Button
            android:id="@+id/youtubeButton"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#D84C4C"
            android:text="watch in youtube"
            android:textColor="#ffff" />

    </LinearLayout>
</LinearLayout>
